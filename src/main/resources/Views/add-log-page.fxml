<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" prefHeight="300" prefWidth="400" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Views.AddLogPageController">
   <VBox alignment="CENTER" prefHeight="400" prefWidth="400">
      <VBox>
         <Label fx:id="info" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
      </VBox>
      <VBox>
         <Label>Date:</Label>
         <DatePicker promptText="Enter Date" fx:id="date"/>
      </VBox>

      <VBox>
         <Label>Time:</Label>
         <TextField fx:id="time" promptText="HH:MM"/>
      </VBox>

      <VBox>
         <Label>Comment:</Label>
         <TextField fx:id="comment" />
      </VBox>

      <VBox>
         <Label>Difficulty:</Label>
         <TextField fx:id="difficulty" />
      </VBox>

      <VBox>
         <Label>Total time:</Label>
         <TextField fx:id="totalTime" />
      </VBox>

      <VBox>
         <Label>Rating:</Label>
         <TextField fx:id="rating" />
      </VBox>

      <Button fx:id="addButton" onAction="#addLogOnClick">Add new log</Button>
   </VBox>
</HBox>
